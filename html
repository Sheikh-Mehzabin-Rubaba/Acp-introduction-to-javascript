        <script>
            var a=2;
            var b=4;
            var c=a+b;
            var d=a-b;
            var e=a/b;
            var f=a*b;
            document.getElementById("i1").innerHTML="2+4 ="+c;
            document.getElementById("i2").innerHTML="2-4 = "+d;
            document.getElementById("i3").innerHTML = "2/4 = " + e;
            document.getElementById("i4").innerHTML = "2*4 = " + f;
            document.write("<br>"+ "If 2 is divided by 4, the remainder would be "+ a%b)
        </script>
